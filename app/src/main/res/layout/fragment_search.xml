<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Type search -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/type_textField"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:startIconDrawable="@drawable/baseline_house_24">

        <AutoCompleteTextView
            android:id="@+id/type_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/type_of_property_hint"
            android:inputType="none"
            android:padding="@dimen/default_large_margin"
            app:simpleItems="@array/property_items" />
    </com.google.android.material.textfield.TextInputLayout>

    <View
        android:id="@+id/type_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="@dimen/default_margin"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/type_textField" />

    <!-- Price search -->
    <TextView
        android:id="@+id/price_text_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:text="@string/price_title"
        android:textSize="@dimen/default_text_middle_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/type_view" />

    <!-- Continuous price slider -->
    <com.google.android.material.slider.RangeSlider
        android:id="@+id/priceSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:valueFrom="50000"
        android:valueTo="1000000"
        app:labelBehavior="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/price_text_textView"
        app:values="@array/initial_slider_values" />

    <View
        android:id="@+id/price_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="@dimen/default_margin"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/priceSlider" />

    <!-- Area search -->
    <TextView
        android:id="@+id/area_text_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:text="@string/area_title"
        android:textSize="@dimen/default_text_middle_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/price_view" />


    <!-- Continuous area slider -->
    <com.google.android.material.slider.RangeSlider
        android:id="@+id/areaSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:valueFrom="0"
        android:valueTo="1000"
        app:labelBehavior="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/area_text_textView"
        app:values="@array/initial_area_slider_values" />


    <View
        android:id="@+id/area_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="@dimen/default_margin"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/areaSlider" />

    <!-- Poi search -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/poi_textField"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/area_view"
        app:startIconDrawable="@drawable/baseline_interests_24">

        <AutoCompleteTextView
            android:id="@+id/poi_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/pois_hint"
            android:inputType="none"
            android:padding="@dimen/default_large_margin"
            app:simpleItems="@array/property_items" />
    </com.google.android.material.textfield.TextInputLayout>

    <View
        android:id="@+id/poi_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="@dimen/default_margin"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/poi_textField" />

    <!-- Date search -->
    <TextView
        android:id="@+id/date_text_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:text="@string/date_title"
        android:textSize="@dimen/default_text_middle_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/poi_view" />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/dateToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date_text_textView">

        <Button
            android:id="@+id/button1"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_large_margin"
            android:text="@string/date_old_title" />

        <Button
            android:id="@+id/button3"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_large_margin"
            android:text="@string/date_recent_title" />
    </com.google.android.material.button.MaterialButtonToggleGroup>

    <View
        android:id="@+id/date_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="@dimen/default_margin"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateToggleButton" />

</androidx.constraintlayout.widget.ConstraintLayout>
