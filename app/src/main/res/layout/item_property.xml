<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:elevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/property_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_little_margin"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="@dimen/default_text_middle_size"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/property_picture"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Penthouse" />

        <TextView
            android:id="@+id/property_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_little_margin"
            android:singleLine="true"
            android:textSize="@dimen/default_text_size"
            android:textStyle="normal"
            app:layout_constraintBottom_toTopOf="@+id/property_price"
            app:layout_constraintStart_toEndOf="@+id/property_picture"
            app:layout_constraintTop_toBottomOf="@+id/property_type"
            tools:text="Brooklyn" />

        <TextView
            android:id="@+id/property_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_little_margin"
            android:singleLine="true"
            android:textAllCaps="false"
            android:textColor="@color/quantum_pink500"
            android:textSize="@dimen/default_text_big_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/property_picture"
            tools:text="$60,000,000" />

        <ImageView
            android:id="@+id/property_picture"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:contentDescription="@string/property_picture"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/property_picture" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>